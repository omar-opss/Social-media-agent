// server.js

// 1. استدعاء المكتبة اللي حملناها
const express = require('express');

// 2. إنشاء "نسخة" من التطبيق بتاعنا
const app = express();

// 3. تحديد "بورت" (Port) وهمي عشان السيرفر يشتغل عليه
// البورت زي "بوابة" على جهازك
const PORT = 3000;

// 4. أهم خطوة: تشغيل السيرفر
// إحنا بنقول للسيرفر: "اسمع" أي طلبات جاية على بورت 3000
app.listen(PORT, () => {
    console.log(`السيرفر شغال... وبيسمع على http://localhost:${PORT}`);
});

// 5. نعمل "رابط" (Route) تجريبي
// عشان لما نفتح الموقع في المتصفح، يرد علينا
// ده رابط الصفحة الرئيسية "/"
app.get('/', (req, res) => {
    // req = الطلب اللي جاي (Request)
    // res = الرد اللي هنبعته (Response)

    res.send('مبروك! السيرفر بتاعك شغال 100%');
});
